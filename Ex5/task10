number = int(input("enter the number of row for full diamond:"))
for i in range(0,number):
    for j in range(0,number-i-1):
        print(" ",end='')
    for k in range(0,2*i+1):
        print("*",end='')
    print()
for i in range(number-1,0,-1):
    for j in range(number-i):
        print(" ",end='')
    for k in range(2*i-1):
        print("*",end='')
    print()
